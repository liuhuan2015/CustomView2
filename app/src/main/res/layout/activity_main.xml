<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuh.customview2.MainActivity">

    <com.liuh.customview2.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleText="Hello World!"
        app:titleTextColor="#ff0000"
        app:titleTextSize="30sp" />

    <com.liuh.customview2.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleText="Hello World hahay!"
        app:titleTextColor="#00ff00"
        app:titleTextSize="20sp" />

    <com.liuh.customview2.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image="@mipmap/meizhi"
        app:imageScaleType="center"
        app:titleText="妹纸~"
        app:titleTextColor="#ff0000"
        app:titleTextSize="12sp" />

</LinearLayout>
